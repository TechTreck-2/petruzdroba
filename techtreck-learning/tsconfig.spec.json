/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jasmine"
    ]
  },
  "include": [
    "src/**/*.spec.ts",              // ← ONLY your *.spec.ts unit tests
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "cypress",                       // ← totally ignore Cypress folder
    "src/**/*.cy.ts"                 // ← any stray *.cy.ts files under src
  ]
}
